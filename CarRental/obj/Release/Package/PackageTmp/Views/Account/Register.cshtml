@model CarRental.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_LayoutWithoutFoother.cshtml";
}

<link href="~/Content/LogIN_OUT.css" rel="stylesheet" />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="bloc-log">
    @Html.AntiForgeryToken()

    <div class="bloc-header">
        <p class="bloc-header-header">Регистрация</p>
        <p class="bloc-header-info">Заполните регистрационную форму</p>
    </div>

    <hr style="color: #5394FD; margin: 5px" />

    @Html.ValidationSummary("", new { @class = "text-danger" })


    <div class="form-group" style="width: 100%; margin: 0 auto;">
        @Html.LabelFor(m => m.Email, new { @class = "bloc-input" })
        <div class="bloc-input-info">
            @Html.TextBoxFor(m => m.Email, new { @class = "bloc-input-input" })
        </div>
    </div>
    <div class="form-group" style="width: 100%; margin: 0 auto;">
        @Html.LabelFor(m => m.Password, new { @class = "bloc-input" })
        <div class="bloc-input-info">
            @Html.PasswordFor(m => m.Password, new { @class = "bloc-input-input" })
        </div>
    </div>
    <div class="form-group" style="width: 100%; margin: 0 auto;">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "bloc-input" })
        <div class="bloc-input-info">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "bloc-input-input" })
        </div>
    </div>

    <br />
    <hr style="color: #5394FD; margin: 5px" />
    <br />

    <div class="form-group" style="text-align: center; width: 100%; margin: 0 auto">
        <input type="submit" value="ЗАРЕГИСТРИРОВАТЬСЯ" class="log-btn" style="font-size:30px"/>
    </div>

    <br />

    <div style="padding: 0; display: inline-block; width: 100%; text-align: center;">
        @Html.ActionLink("Войти", "Login", new { @class = "OtherLogInFich" })
    </div>

</div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

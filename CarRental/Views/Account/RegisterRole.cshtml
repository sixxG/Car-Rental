@model CarRental.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
}

<h2>Назначить роль пользователю</h2>

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Создать новый аккаунт</h4>

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Выберите пользователя", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserName")
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Выберите роль", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
                @Html.DropDownList("Name")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-info" value="Назначить роль" />
        </div>
    </div>
}



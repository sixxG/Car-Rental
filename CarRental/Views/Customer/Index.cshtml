@model IEnumerable<CarRental.Models.Customer_Tbl>

@{
    Layout = "~/Views/Shared/_LayoutWithoutFoother.cshtml";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<p style="margin-top: 5%;"/>

@if (User.IsInRole("Admin"))
{
    <ul class="nav nav-tabs">
        <li class="active">
            <a data-toggle="tab" href="#Clients" style=" padding: 10px 5px 5px 5px;"><h4>Клиенты</h4></a>
        </li>
        <li>
            <a data-toggle="tab" href="#Managers" style=" padding: 10px 5px 5px 5px;"><h4>Менеджеры</h4></a>
        </li>
        <li>
            <a data-toggle="tab" href="#Admins" style=" padding: 10px 5px 5px 5px;"><h4>Администраторы</h4></a>
        </li>
    </ul>
}

<!--Block-->
<div class="tab-content">
    <div id="Clients" class="tab-pane fade in active">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FIO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Passport_Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Drivers_License)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.user_ID)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FIO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Passport_Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Drivers_License)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.user_ID)
                    </td>
                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>*@
                </tr>
            }

        </table>
    </div>
    <div id="Managers" class="tab-pane fade in">
        @Html.Action("Index", "Manager")
    </div>
    <div id="Admins" class="tab-pane fade in">
        @Html.Action("Index", "Admin")
    </div>
</div>
<!--Block-->
